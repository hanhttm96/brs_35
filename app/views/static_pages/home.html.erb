<div class="container">
  <section>
    <div id="carousel-example-generic"
      class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic"
          data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="item active">
          <%= link_to image_tag("user/slide3.jpg"), "#" %>
        </div>
        <div class="item">
          <%= link_to image_tag("user/slide4.jpg"), "#" %>
        </div>
        <div class="item">
          <%= link_to image_tag("user/slide1.jpg"), "#" %>
        </div>
      </div>
      <a class="left carousel-control"
        href="#carousel-example-generic" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="right carousel-control"
        href="#carousel-example-generic" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div>
  </section>
  <div class="container-fluid">
    <div class="row">
      <div class="caption">
        <marquee direction="right"><h2><%= t "project_name" %></h2></marquee>
      </div>
    </div>
  </div>
  <section>
    <div class="row products">
      <% @books.each do |book| %>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <%= link_to image_tag(book.image), "#" %>
            <div class="caption">
              <h3><%= book.name %></h3>
              <p><%= l book.publish_date, format: :default %></p>
              <p>
                <label><%= book.rating %></label>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
              </p>
              <p>
                <span class="glyphicon glyphicon-hand-right" aria-hidden="true">
                </span>
                <span class="glyphicon glyphicon-heart-empty" aria-hidden="true">
                </span>
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true">
                </span>
              </p>
            </div>
          </div>
        </div>
      <% end %>
      <%= will_paginate @books %>
    </div>
  </section>
</div>
